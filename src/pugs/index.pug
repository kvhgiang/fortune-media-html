<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Document
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css")
    link(rel="stylesheet", href="./assets/css/style.css")
  body
    .container
      header.row.justify-content-center
        .col-md-4
          .logo.text-center
            a(href='javascript:;')
              img(src='./assets/images/logo.png')
        .col-md-8
          .d-flex.align-items-center.flex-column.flex-lg-row
            h1.h1 fortunemedia.asia
            .d-flex.align-items-center
              span.icon.verified.mx-2
              button.btn.btn-outline-white message
              button.btn.btn-outline-white.btn-icon 
                i.icon.location
              .dropdown
                button#menuMore.btn.btn-outline-white.btn-icon.dropdown-toggle(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                  span.icon.caret-down
                .dropdown-menu(aria-labelledby='menuMore')
                  a.dropdown-item(href='#') Action
                  a.dropdown-item(href='#') Another action
                  a.dropdown-item(href='#') Something else here
              .dropdown
                button#menuMore.btn.btn-outline-0.btn-icon.dropdown-toggle(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                  span.icon.more
                .dropdown-menu(aria-labelledby='menuMore')
                  a.dropdown-item(href='#') Action
                  a.dropdown-item(href='#') Another action
                  a.dropdown-item(href='#') Something else here
          .d-flex.statistic
            .statistic-item.text-center.text-md-left
              b.d-block.d-lg-inline 123+ 
              span clients
            .statistic-item.text-center.text-md-left
              b.d-block.d-lg-inline 300+ 
              span campaigns
            .statistic-item.text-center.text-md-left
              b.d-block.d-lg-inline 100+
              span million reach
          p #[b Fortune Media] #[br] Creative Digital Agency#[br] Vietnamese Root. Global Footprint. #[br]hello@fortunemedia.asia #[br](+84) 28 66 838 988

    
      nav.sticky-top.border-top.bg-white.mx-md-n3
        ul.nav.justify-content-lg-center.flex-nowrap.text-nowrap
          li.nav-item
            a.nav-link.active(data-toggle="tab" href="#home") HOME
          li.nav-item
            a.nav-link(data-toggle="tab" href="#about-us") ABOUT US
          li.nav-item
            a.nav-link(data-toggle="tab" href="#services") OUR SERVICES
          li.nav-item
            a.nav-link(data-toggle="tab" href="#saved-works") SAVED WORKS
          li.nav-item
            a.nav-link(data-toggle="tab" href="#tagged-media") TAGGED MEDIA


      main
        .tab-content
          +tabPane('home', GRID_ITEM, true)
          +tabPane('about-us', GRID_ITEM.filter(function(item) { return item.tabNum == 2 }))
          +tabPane('services', GRID_ITEM.filter(function(item) { return item.tabNum == 3 }))
          +tabPane('saved-works', GRID_ITEM.filter(function(item) { return item.tabNum == 4 }))
          +tabPane('tagged-media', GRID_ITEM.filter(function(item) { return item.tabNum == 5 }))

    #modalZoomInGallery.modal.fade(tabindex='-1' role='dialog' aria-labelledby='modalZoomInGallery' aria-hidden='true')
      .modal-dialog.modal-full-screen(role='document')
        .modal-content
          .modal-header
            h5#modalZoomInGallery.modal-title Gallery
            button.close(type='button' data-dismiss='modal' aria-label='Close')
              span(aria-hidden='true') &times;
          .modal-body
            #gallery-wrapper.text-center



